<UserControl x:Class="Messenger.Views.DetaliView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True" Height="206" Width="428">
    <Grid Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Margin="10,37,307,0" FontSize="20" FontWeight="Bold" Foreground="DodgerBlue" Height="27"/>
        <TextBlock TextWrapping="Wrap" Text="Message" VerticalAlignment="Top" Margin="10,86,307,0" Foreground="DodgerBlue" FontSize="20" FontWeight="Bold" Height="26"/>
        <TextBox Margin="160,45,0,0"   Text="{Binding Name}" TextWrapping="Wrap" VerticalAlignment="Top" BorderBrush="DodgerBlue" Height="19" HorizontalAlignment="Left" Width="260" />
        <TextBox Margin="160,85,0,0"   Text="{Binding Message}" TextWrapping="Wrap" BorderBrush="DodgerBlue" HorizontalAlignment="Left" Width="260" Height="74" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
